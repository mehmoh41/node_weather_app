<body>
    {{>header}}
    <p><span style="color:red">*</span>{{message}}</p>
    <form action="">
        <input type="email" name="email" placeholder="Your Email" autocomplete="off"><br>
        <textarea type="text" col="8" row="10" name="email" placeholder="Your Email"></textarea><br>
        <input type="submit" value="submit">
    </form>
    {{>footer}}
</body>
</html>